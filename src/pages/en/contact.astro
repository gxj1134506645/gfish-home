---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Nav from "../../components/Nav.astro";
import Footer from "../../components/Footer.astro";
import QRCodes from "../../components/QRCodes.astro";
const lang: 'en' = 'en';
---
<BaseLayout lang={lang} title="Contact">
  <Nav lang={lang} />
  <main class="max-w-3xl mx-auto px-4 py-16">
    <header class="mb-12 text-center">
      <h1 class="text-4xl font-bold mb-4">Contact Me</h1>
      <p class="text-gray-600 dark:text-gray-400">
        Feel free to reach out through the following channels
      </p>
    </header>

    <section class="mb-12">
      <h2 class="text-2xl font-bold mb-6 text-center">Scan to Add WeChat</h2>
      <QRCodes lang={lang} />
    </section>

    <section class="text-center text-sm text-gray-500 dark:text-gray-400">
      <p>You can also follow my open source projects on <a href="https://github.com/gxj1134506645" target="_blank" rel="noopener noreferrer" class="text-blue-600 hover:text-blue-800 dark:text-blue-400 dark:hover:text-blue-300">GitHub</a></p>
    </section>
  </main>
  <Footer lang={lang} />
</BaseLayout>
